variables:
    base_url: http://localhost:8080/api

requests:

    create-package:
        url: ${base_url}/packages/
        method: POST
        body:
            json:
                url: https://github.com/foo/1
                status: none
                lastCommitAt: "2020-04-24T13:03:09Z"
        validation:
            status: 200

    all-packages:
        url: ${base_url}/packages
        validation:
            status: 200
        log: json

    get-package:
        url: ${base_url}/packages/${all-packages[0].id}
        validation:
            status: 200
        log: json

    put-package:
        url: ${base_url}/packages/${all-packages[0].id}
        method: PUT  # TODO: add PATCH to rester
        body:
            json:
                url: https://github.com/foo/2
                status: ok
                lastCommitAt: "2019-03-23T00:00:00Z"
        validation:
            status: 200
        log: json

    delete-package:
        url: ${base_url}/packages/${all-packages[0].id}
        method: DELETE
        validation:
            status: 200
