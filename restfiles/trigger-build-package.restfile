                buildTool: xcodebuild
                platform:
                    name: unknown
                    version: test
                swiftVersion:
                    major: 5
                    minor: 1
                    patch: 3

        validation:
            status: 200
        log: json

    post build 5.0.1:
        url: ${base_url}/api/packages/${package}/trigger-builds
