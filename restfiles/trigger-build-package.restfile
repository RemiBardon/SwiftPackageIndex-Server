                buildTool: xcodebuild
                platform:
                    name: unknown
                    version: test
                swiftVersion:
                    major: 5
                    minor: 0
                    patch: 1

        validation:
            status: 200
        log: json

    post build 4.2.1:
        url: ${base_url}/api/packages/${package}/trigger-builds
